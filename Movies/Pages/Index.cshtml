@page
@model IndexModel
@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<div id="container">

    <div class="checkbox-list">
        @foreach (Movie movie in Model.Movies)
        {
            <div class="movie-entry">
                <h4>
                    @movie.Title
                    <smaller>
                        ( @(@movie.MPAA_Rating == null ? "Not Rated" : @movie.MPAA_Rating) )
                    </smaller>
                </h4>
                <i>@movie.Major_Genre</i>
                <div class="ratings">
                    <div class="rotten-tomatoes-rating">
                        Rotten Tomatoes:
                        @(@movie.Rotten_Tomatoes_Rating == null ? "No rating" : (@movie.Rotten_Tomatoes_Rating).ToString())
                    </div>
                    <div class="imdb-rating">
                        IMDB: @(@movie.IMDB_Rating == null ? "No rating" : @movie.IMDB_Rating.ToString())
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="checkbox-list">
        <form method="post">
            <input type="text" name="search" id="search" />
            <input type="submit" value="Search and Filter" />

            <h2> MPAA Rating</h2>
            <label>
                <input type="checkbox" name="rating" value="G" />
                Rated G
            </label>
            <label>
                <input type="checkbox" name="rating" value="PG" />
                Rated PG
            </label>
            <label>
                <input type="checkbox" name="rating" value="PG-13" />
                Rated PG-13
            </label>
            <label>
                <input type="checkbox" name="rating" value="R" />
                Rated R
            </label>
            <label>
                <input type="checkbox" name="rating" value="NC-17" />
                Rated NC-17
            </label>

        </form>
    </div>
</div>